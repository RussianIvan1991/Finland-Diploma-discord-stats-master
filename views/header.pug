header
    div(class="header__logo")
        img(src="/images/logo.svg" width="150px")
        a(class="header__title" href="/")
            h1 DiscordStats
        img(src="https://www.ks54.ru/wp-content/uploads/2020/03/ks54-named-c-left.png" height="50px")
    div(class="header__menu")
        if session.user
            div
                a(href="/dashboard")
                    button(class="btn-submit") Dashboard
            div(class="user-avatar")
                img(src=`https://cdn.discordapp.com/avatars/${session.user.id}/${session.user.avatar}.png`)
            div
                a(href="/logout")
                    button(class="btn-submit") Logout
        else
            div
                a(href="/login")
                    button(class="btn-submit") Login